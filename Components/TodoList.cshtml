@if (State.Todos.Count > 0) {
    <section class="main">
        <input id="toggle-all" class="toggle-all" type="checkbox" @onchange(v => State.ToggleAll((bool)v))>
        <label for="toggle-all">Toggle All</label>
        <ul class="todo-list">
            <!-- List items should get the class `editing` when editing and `completed` when marked as completed -->
            @foreach (var (todo, i) in FilteredTodos.WithIndex()) {
                <li class=@(todo.Completed ? "completed" : "")>
                    <div class="view">
                        <input id=@("todo" + i) class="toggle" type="checkbox" @bind(todo.Completed)>
                        <label for=@("todo" + i)>@todo.Text</label>
                        <button class="destroy" @onclick(() => State.RemoveTodo(todo))></button>
                    </div>
                    <input class="edit" @bind(todo.Text)>
                </li>
            }
        </ul>
    </section>
}

@functions {
    public AppState State { get; set; }

    public IEnumerable<Todo> FilteredTodos
    {
        get 
        {
            if (string.IsNullOrEmpty(Filter) || Filter == "all") 
                return State.Todos;

            if (Filter == "active")
                return State.Active;

            return State.Completed;
        }
    }

    public string Filter { get; set; }

    protected override void OnParametersSet() =>
        State.OnChange += StateHasChanged;
}